	'tegra124-nyan-big-compat-strings.patch'
	'tegra124-nyan-dtsi-fixes.patch'
	'tegra124-nyan-ramcode-0-4-timings.patch'
	'tegra124-set-long-ram-code.patch'
        'config'
        'cmdline'
        'kernel.its'
        'kernel.keyblock'
        'kernel_data_key.vbprivk')
